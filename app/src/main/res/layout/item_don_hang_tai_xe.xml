<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:gravity="center_vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="0dp">
            <ImageView
                android:id="@+id/ivHinhQuanTX"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_launcher_background"/>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="8dp">

            <TextView
                android:id="@+id/tvTenQuanTX"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tên Quán Ăn"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="#000"/>

            <TextView
                android:id="@+id/tvDiaChiQuanTX"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Địa chỉ quán..."
                android:textSize="12sp"
                android:textColor="#666"
                android:ellipsize="end"
                android:maxLines="1"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="4dp"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tvSoLuongMonTX"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3 món"
                    android:background="#EEEEEE"
                    android:padding="4dp"
                    android:textSize="12sp"/>

                <TextView
                    android:id="@+id/tvKhoangCachTX"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2.5 km"
                    android:textStyle="bold"
                    android:textColor="#FF5722"
                    android:layout_marginStart="8dp"/>
            </LinearLayout>

            <TextView
                android:id="@+id/tvTongTienDonTX"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tổng đơn: 150.000đ"
                android:textSize="12sp"
                android:layout_marginTop="2dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="end">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thu nhập"
                android:textSize="10sp"
                android:textColor="#666"/>

            <TextView
                android:id="@+id/tvTienLoiTX"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+15k"
                android:textColor="#4CAF50"
                android:textStyle="bold"
                android:textSize="18sp"/>

            <Button
                android:id="@+id/btnNhanDonTX"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="NHẬN"
                android:backgroundTint="#2196F3"
                android:textColor="#FFF"
                android:textSize="12sp"
                android:layout_marginTop="4dp"/>
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>