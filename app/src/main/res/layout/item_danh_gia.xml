<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@android:color/white"
    android:layout_marginBottom="1dp">

    <TextView
        android:id="@+id/tvTenNguoiDungDG"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Người dùng ẩn danh"
        android:textStyle="bold"
        android:textColor="#000000"
        android:textSize="14sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="4dp">

        <RatingBar
            android:id="@+id/ratingBarItem"
            style="?android:attr/ratingBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="5"
            android:rating="5"
            android:theme="@style/Widget.AppCompat.RatingBar.Small"
            android:progressTint="#FFC107"
            android:secondaryProgressTint="#FFC107"
            android:isIndicator="true" />

        <TextView
            android:id="@+id/tvThoiGianDG"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="20/11/2025"
            android:textSize="12sp"
            android:textColor="#757575" />
    </LinearLayout>

    <TextView
        android:id="@+id/tvNoiDungDG"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Món ăn rất ngon, giao hàng nhanh!"
        android:textColor="#333333"
        android:textSize="14sp" />

</LinearLayout>